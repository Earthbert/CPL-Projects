{
	"java.project.referencedLibraries": [
		"lib/**/*.jar",
		"antlr.jar"
	],
	"antlr4.generation": {
		"outputDir": ".",
		"mode": "external",
		"listeners": true,
		"visitors": true,
		"importDir": "../lexer"
	},
	"search.exclude": {
		"**/build": true,
	},
	"java.project.outputPath": "build",
	"java.project.resourceFilters": [
		".antlr",
		"\\.git",
		"src/cool/parser/CoolLexer.java",
	],
	"java.cleanup.actions": [
		"renameFileToType",
		"addOverride",
		"organizeImports",
		"addFinalModifier",
		"qualifyMembers",
		"invertEquals",
		"instanceofPatternMatch",
		"lambdaExpression"
	],
}